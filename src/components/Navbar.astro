---
// Navbar.astro
const navItems = [
  { name: "Sobre mí", label: "about" },
  { name: "Proyectos", label: "projects" },
  { name: "Experiencia", label: "experience" }, // ¡Añadimos la nueva sección!
  { name: "Contacto", label: "contact" },
];
---

<header class="fixed top-0 w-full z-50 transition-all duration-300 backdrop-blur-md bg-bg/50 border-b border-white/10">
  <div class="max-w-[1100px] mx-auto flex items-center justify-between h-20 px-6">
    
    <a href="#" class="text-xl font-bold tracking-tight hover:text-primary transition-colors">
      Iván<span class="text-primary">.</span>
    </a>

    <nav class="hidden md:flex gap-8">
      {navItems.map((item) => (
        <a 
          href={`#${item.label}`} 
          class="text-sm font-medium text-gray-300 hover:text-primary transition-colors"
        >
          {item.name}
        </a>
      ))}
    </nav>

    <a 
      href="/ivanCv.pdf" 
      target="_blank"
      class="hidden md:inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-black bg-primary rounded-full hover:bg-emerald-400 transition-transform hover:-translate-y-1 shadow-lg shadow-primary/20"
    >
      Descargar CV
    </a>
  </div>
</header>